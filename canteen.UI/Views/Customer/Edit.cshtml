@model canteen.Data.Models.Domain.Customer
@{
}

<h3>Edit item</h3>

<a href="/Customer/DisplayAll" class="my-2 btn btn-primary">Display All</a>

<form asp-action="Edit">
    <input asp-for="Id" type="hidden" class="form-control">

    <div class="mb-3">
        <label asp-for="item_number" class="form-label">Item Number</label>
        <input asp-for="item_number" type="text" class="form-control">
        <span asp-validation-for="item_number"></span>
    </div>

    <div class="mb-3">
        <label asp-for="description" class="form-label">Description</label>
        <input asp-for="description" type="text" class="form-control">
        <span asp-validation-for="description"></span>
    </div>

    <div class="mb-3">
        <label asp-for="unit" class="form-label">Unit</label>
        <select asp-for="unit" class="form-control">
            <option value="">Select Unit</option>
            <option value="Number">Number</option>
            <option value="Kilogram">Kilogram</option>
            <option value="Liter">Liter</option>
            <!-- Add more options as needed -->
        </select>
        <span asp-validation-for="unit"></span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="mb-3">
            @TempData["msg"]
        </div>
    }

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
